# ============================================
# Docker Compose Configuration
# ============================================

# PocketBase Admin Credentials (REQUIRED for Backend to connect)
# You MUST create this admin user manually at http://localhost:8090/_/ first!
POCKETBASE_ADMIN_EMAIL=admin@example.com
POCKETBASE_ADMIN_PASSWORD=changeme1234

# Docker Hub User
DOCKER_USER=boverdrive

# Custom Ports
# BACKEND_PORT=3001
# FRONTEND_PORT=3000

# ============================================
# Backend Configuration (Passed to Backend Container)
# ============================================

# Internal Docker Network Configuration
# (These are used by docker-compose.yml to override internal settings)
SERVER_HOST=0.0.0.0
# SERVER_PORT will be set by BACKEND_PORT

# External API Configuration
COINGECKO_API_URL=https://api.coingecko.com/api/v3
SETTRADE_API_URL=https://open-api.settrade.com/api
PRICE_CACHE_TTL=60

# Logging
RUST_LOG=portfolio_backend=info,tower_http=info

# OAuth Configuration
OAUTH_ENABLED=true
FRONTEND_URL=http://localhost:3000
OAUTH_REDIRECT_URL=http://localhost:3001

# Custom OIDC Provider
OIDC_PROVIDER_NAME=pocketid
OIDC_ISSUER_URL=https://your-oidc-provider.com
OIDC_CLIENT_ID=your-client-id
OIDC_CLIENT_SECRET=your-client-secret
OIDC_SCOPES="openid profile email"

# JWT Configuration
JWT_SECRET=change-this-to-a-secure-random-secret
JWT_EXPIRY_HOURS=24

# Initial Admin User for Backend (Application Level Admin, separate from PB Admin)
ADMIN_EMAIL=admin@portfolio.local
ADMIN_PASSWORD=admin123
